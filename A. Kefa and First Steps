#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int n;
	cin>>n;
	int a[n];
	for(int i=0;i<n;i++)
	    cin>>a[i];
	int c=1,m=1;
	for(int i=1;i<n;i++){
	    if(a[i-1]<=a[i]) c++;
	    else{
	        m=max(m,c);c=1;}
	}
	m=max(m,c);
	cout<<m;
	return 0;
}
